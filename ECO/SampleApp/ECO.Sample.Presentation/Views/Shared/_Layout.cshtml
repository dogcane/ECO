<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/jqgrid")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqgrid")
    @Scripts.Render("~/bundles/knockout")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div id="charmBar">
        <h1>Community Events Manager - @ViewBag.Title</h1>
        @Html.ActionLink("Events", "Index", "Event", new { Area = "Events" }, new { id = "eventsButton", @class = "charmButton", title = "Go to events" })
        @Html.ActionLink("Speakers", "Index", "Speaker", new { Area = "Speakers" }, new { id = "speakersButton", @class = "charmButton", title = "Go to speakers" })        
        <div class="clearFix"></div>
    </div>
    <div id="container">
        @RenderBody()
    </div>    
</body>
</html>
